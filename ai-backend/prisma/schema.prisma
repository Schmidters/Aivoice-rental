// ========================================
// V4 schema for AI Voice Rental backend
// Tables: Lead, Property, Message, Booking, LeadProperty, PropertyFacts
// ========================================

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ========================
// LEADS
// ========================
model Lead {
  id          Int            @id @default(autoincrement())
  phone       String         @unique
  name        String?
  email       String?
  createdAt   DateTime       @default(now())
  updatedAt   DateTime       @updatedAt

  // Relationships
  messages    Message[]
  bookings    Booking[]
  properties  LeadProperty[]
}

// ========================
// PROPERTIES
// ========================
model Property {
  id          Int            @id @default(autoincrement())
  slug        String         @unique
  address     String?
  city        String?        @default("Calgary")
  province    String?        @default("AB")
  createdAt   DateTime       @default(now())
  updatedAt   DateTime       @updatedAt

  // Relationships
  messages    Message[]
  bookings    Booking[]
  leads       LeadProperty[]
}

// ========================
// MESSAGES
// ========================
model Message {
  id          Int            @id @default(autoincrement())
  leadId      Int
  propertyId  Int?
  role        String
  content     String
  meta        Json?
  createdAt   DateTime       @default(now())

  // Relationships
  lead        Lead           @relation(fields: [leadId], references: [id])
  property    Property?      @relation(fields: [propertyId], references: [id])
}

// ========================
// BOOKINGS
// ========================
model Booking {
  id          Int            @id @default(autoincrement())
  leadId      Int
  propertyId  Int
  datetime    DateTime
  source      String          @default("ai")
  createdAt   DateTime        @default(now())

  // Relationships
  lead        Lead            @relation(fields: [leadId], references: [id])
  property    Property        @relation(fields: [propertyId], references: [id])
}

// ========================
// LINK TABLE (Lead â†” Property)
// ========================
model LeadProperty {
  leadId      Int
  propertyId  Int
  createdAt   DateTime       @default(now())

  lead        Lead           @relation(fields: [leadId], references: [id])
  property    Property       @relation(fields: [propertyId], references: [id])

  @@id([leadId, propertyId])
}

// ========================
// PROPERTY FACTS (Zapier/BrowseAI ingest)
// ========================
model PropertyFacts {
  id         Int      @id @default(autoincrement())
  slug       String   @unique
  leadPhone  String
  leadName   String?
  property   String
  unit       String?
  link       String
  createdAt  DateTime @default(now())
}
